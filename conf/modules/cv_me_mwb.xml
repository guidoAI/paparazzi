<!DOCTYPE module SYSTEM "module.dtd">

<module name="cv_me_mwb" dir="computer_vision">
  <doc>
    <description>Manual exposure and Manual white balancing for the Bebop 1 and 2</description>
  </doc>

  <settings>
	<dl_settings NAME="Exposure">

      <dl_settings name="Exposure">
        <dl_setting var="cv_me_mwb_exposure" min="1" step="0.1" max="500" module="computer_vision/cv_me_mwb" shortname="exp"/>
        <dl_setting var="cv_me_mwb_red" min="1.5" step="0.1" max="63.50" module="computer_vision/cv_me_mwb" shortname="red"/>
        <dl_setting var="cv_me_mwb_blue" min="1.5" step="0.1" max="63.50" module="computer_vision/cv_me_mwb" shortname="blue"/>
        <dl_setting var="cv_me_mwb_green1" min="1.5" step="0.1" max="63.50" module="computer_vision/cv_me_mwb" shortname="green1"/>
        <dl_setting var="cv_me_mwb_green2" min="1.5" step="0.1" max="63.50" module="computer_vision/cv_me_mwb" shortname="green2"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="cv_me_mwb.h"/>
  </header>
  <init fun="cv_me_mwb_init()"/>
  <periodic fun="cv_me_mwb_periodic()" freq="1" autorun="TRUE"/>
  <makefile>
    <file name="cv_me_mwb.c"/>
  </makefile>
</module>

